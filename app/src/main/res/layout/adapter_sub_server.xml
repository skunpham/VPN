<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:background="@drawable/ic_shape_background"
        android:backgroundTint="@color/white"
        android:paddingStart="@dimen/_54sdp"
        android:id="@+id/rlSubServer">

        <ImageView
            android:id="@+id/imgSubNation"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/layoutMore"
            android:layout_toEndOf="@+id/imgSubNation"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtSubNationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_text_server"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/_8ssp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgServerType"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtSubAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/server_ad"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/imgNetworkIcon"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_10sdp" />
        </LinearLayout>

    </RelativeLayout>
</layout>